{
  "name": "go-reactor",
  "version": "0.0.1",
  "description": "JavaScript harness for Go WASI reactor binaries",
  "author": "Aperture Robotics",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aperturerobotics/go-reactor.git"
  },
  "homepage": "https://github.com/aperturerobotics/go-reactor#readme",
  "bugs": {
    "url": "https://github.com/aperturerobotics/go-reactor/issues"
  },
  "keywords": [
    "go",
    "golang",
    "wasm",
    "wasi",
    "reactor",
    "webassembly"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "!**/*.tsbuildinfo",
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsc",
    "format": "prettier --write src",
    "lint": "eslint ./src",
    "release": "npm run release:version && npm run release:commit",
    "release:commit": "git reset && git add package.json && git commit -s -m \"release: v$(node -p \"require('./package.json').version\")\" && git tag v$(node -p \"require('./package.json').version\")",
    "release:minor": "npm run release:version:minor && npm run release:commit",
    "release:publish": "git push && git push --tags",
    "release:version": "npm version patch -m \"release: v%s\" --no-git-tag-version",
    "release:version:minor": "npm version minor -m \"release: v%s\" --no-git-tag-version",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsgo --noEmit"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^25.0.6",
    "@typescript/native-preview": "^7.0.0-dev.20260106.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.52.0",
    "vitest": "^4.0.0"
  }
}
